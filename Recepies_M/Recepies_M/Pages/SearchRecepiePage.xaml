<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Recepies_M.Pages.SearchRecepiePage"
             BackgroundColor="Black">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Orientation="Horizontal">
                <Frame Padding="5"
                       HasShadow="False"
                       HorizontalOptions="FillAndExpand"
                       BackgroundColor="Black"
                       BorderColor="Transparent">
                    <StackLayout Orientation="Horizontal">
                        <Image Source="backicon.png"
                               Margin="10,0,10,0"
                               HeightRequest="25"
                               WidthRequest="25">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer x:Name="ImgBack" Tapped="ImgBack_OnTapped" />
                            </Image.GestureRecognizers>
                        </Image>
                        <Frame Margin="0,0,15,0"
                               Padding="0"
                               HasShadow="False"
                               HorizontalOptions="FillAndExpand"
                               CornerRadius="20">
                            <Entry Placeholder="Search Movie"
                                   x:Name="EntSearchMovie" 
                                   TextChanged="EntSearchMovie_OnTextChanged"
                                   TextColor="Black"
                                   BackgroundColor="White"/>
                        </Frame>
                    </StackLayout>
                </Frame>
            </StackLayout>
            <CollectionView x:Name="CvRecepiesSearch" 
                            SelectionMode="Single" 
                            SelectionChanged="CvRecepiesSearch_OnSelectionChanged">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Span="1"
                                     Orientation="Vertical" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="White"
                               BackgroundColor="Transparent"
                               Padding="1">

                        <Grid Padding="15,10,15,0"
                              Margin="0,0,0,10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="100" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="8*" />
                            </Grid.ColumnDefinitions>
                            <Image Aspect="Fill"
                                   HeightRequest="100"
                                   VerticalOptions="Start"
                                   Grid.Column="0"
                                   Source="{Binding FullImage}"/>
                                
                                <!--Source="{Binding imageUrl}"/>-->
                                <Label FontSize="Medium"
                                   BackgroundColor="Black"
                                   FontFamily="Lobster"
                                   Grid.Column="1"
                                   VerticalOptions="Center" 
                                   Text="{Binding title}"/>
                        </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>