<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:forms="clr-namespace:Lottie.Forms;assembly=Lottie.Forms"
             mc:Ignorable="d"
             x:Class="Recepies_M.Pages.SignupPage"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="Black">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Margin="20"
                         Spacing="15">
            <Label Text="Załóż nowe konto"
                   TextColor="White"
                   VerticalOptions="Start"
                   HorizontalOptions="CenterAndExpand"
                   FontSize="Title" />

            <forms:AnimationView 
                Animation="35625-food-choose.json"
                AutoPlay="True"
                Loop="True"
                HeightRequest="250"
                WidthRequest="250"
                BackgroundColor="Transparent"/>


            <Label Text="Zaczynajmy!"
                   Margin="0,30,0,0"
                   TextColor="White"
                   VerticalOptions="Start"
                   FontSize="Large"
                   HorizontalOptions="CenterAndExpand" />

            <Entry Placeholder="Nazwa użytkownika"
                   x:Name="EntName"
                   TextColor="White"
                   PlaceholderColor="White"/>
      
            <Entry Placeholder="Email"
                   x:Name="EntEmail"
                   TextColor="White"
                   PlaceholderColor="White"
                    />
         
            <Entry Placeholder="Hasło"
                   x:Name="EntPassword"
                   IsPassword="True"
                   TextColor="White"
                   PlaceholderColor="White"
                    />

            <StackLayout Orientation="Horizontal"
                         HorizontalOptions="Center"
                         Margin="0,40,0,0">
                <Label Text="Masz już konto?"
                       TextColor="White" />
                <Label x:Name="lblLogin"
                       Text="Kliknij tutaj"
                       TextDecorations="Underline"
                       TextColor="CornflowerBlue">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="LblLogin_OnTapped" />
                    </Label.GestureRecognizers>
                </Label>
            </StackLayout>

            <Button Text="Register"    
                    x:Name="BtnRegister"
                    FontFamily="Lobster"
                    HeightRequest="60"
                    WidthRequest="50"
                    CornerRadius="40"                                  
                    Margin="0,30,0,0"                   
                    TextColor="White"                  
                    BackgroundColor="Transparent" 
                    BorderWidth="2"
                    BorderColor="White"
                    Command="{Binding OpenMenuPage}"
                    Clicked="BtnRegister_OnClicked"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>